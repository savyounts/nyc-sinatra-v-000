<form action="/figures/<%=@figure.id%>" method="post">
  <input type="text" name="figure[name]" placeholder="Name" id="figure_name"><%=@figure.name%><br>

  <% @titles.each do |t| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= t.id %>" id="title_<%=t.id%>" <% 'checked' if @figure.titles.include?(t)%>><%= t.name %></input>
  <% end %>
  <br>

  <p>Create New Title</p>
  <input type="text" name="title[name]" id="new_title"><br>

  <% @landmarks.each do |l| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= l.id %>" id="landmark_<%=l.id%>" <% 'checked' if @figure.landmarks.include?(l)%> ><%= l.name %></input>
  <% end %>
  <br>
  <p>Create New Landmark</p>
  <input type="text" name="landmark[name]" id="new_landmark"><br>
  <input type="submit" value="Save">
</form>
