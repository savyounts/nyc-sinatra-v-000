<form action="/figures" method="post">
  <input type="text" name="figure[name]" placeholder="Name"><br>

  <% @titles.each do |t| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= t.id %>"><%= t.name %></input>
  <% end %>
  <br>

  <p>Create New Title</p>
  <input type="text" name="title[name]">
  <% @landmarks.each do |l| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= l.id %>"><%= l.name %></input>
  <% end %>
  <br>
  <p>Create New Landmark</p>
  <input type="text" name="landmark[name]"><br>
  <input type="submit" value="Create New Figure">
</form>










expect(page.body).to include('<form')
expect(page.body).to include('figure[name]')
expect(page.body).to include('figure[title_ids][]')
expect(page.body).to include('figure[landmark_ids][]')
expect(page.body).to include('landmark[name]')
expect(page.body).to include('title[name]')
